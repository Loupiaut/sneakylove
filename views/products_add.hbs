<div class="big-container product-manage-wrapper flexed-item">
  <form action="/prod-add" method="post" class="add-product-form" enctype="multipart/form-data">
    {{#if msg}}
    <p class="msg {{msg.status}}">{{msg.txt}}</p>
    {{/if}}
    <h3 class="form-title">Add Sneakers to the collection</h3>
    <div class="form-item-wrapper flexed-item">
      <label for="sneaker_name" class="label-name label">Model name</label>
      <input id="sneaker_name" name="sneaker_name" type="text" class="input-text input" placeholder="Nike Air Max 90"
        value="Air Max 1">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneaker_ref" class="label-ref label">RÃ©f.</label>
      <input id="sneaker_ref" name="sneaker_ref" type="text" class="input-text input" placeholder="ex: NV23498"
        value="NV23498">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneaker_sizes" class="label-ref label">Size</label>
      <input id="sneaker_sizes" name="sneaker_sizes" type="number" class="input-text input" placeholder="ex: 37"
        value="42">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneaker_descr" class="label-descr label">Description</label>
      <input id="sneaker_descr" name="sneaker_descr" type="text" class="input-text input"
        placeholder="The better sneakers to run" value="foo bar baz">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneaker_price" class="label-price label">Price</label>
      <input id="sneaker_price" name="sneaker_price" type="number" class="sneaker-price input" min="1" value="123">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneaker_img" class="label-price label">Image</label>
      <input id="sneaker_img" name="sneaker_img" type="file" class="sneaker-price input">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneaker_category" class="label-main-cat label">Main category</label>
      <select id="sneaker_category" name="sneaker_category" class="select" required>
        <option value="-1" disabled selected>Choose a category</option>
        <option value="men">Men</option>
        <option value="women">Women</option>
        <option value="kids">Kids</option>
      </select>
    </div>

    <div class="form-item-wrapper flexed-item">
      <label for="sneaker_id_tags" class="label">Tags</label>
      {{> form_tags_select}}
    </div>
    <button class="button-primary add-sneaker-btn">Add to collection</button>
  </form>

  <form method="post" action="/tag" class="add-tag-form" id="add-tag-form">
    <p id="add-tag-message" class="msg"></p>
    <h3 class="form-title">Add tags</h3>
    <div class="form-item-wrapper flexed-item">
      <label for="label" class="category-name label">Sneaker tag</label>
      <input id="label" name="label" type="text" class="input" placeholder="ex: Gangsta">
    </div>
    <button id="btn_new_tag" class="button-primary add-category-btn">Create this category</button>
  </form>
</div>